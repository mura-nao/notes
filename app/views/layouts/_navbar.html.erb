<% if logged_in? %>

<!--ログインしている場合-->

  <header class="mb-4">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <a class="navbar-brand" href="/">トップページ</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to 'メインぺージ', "/users/#{current_user.id}", class: 'nav-link'%></li>
          <li class="nav-item"><%= link_to 'その他のぺージ', hobbies_path, class: 'nav-link'%></li>
          <li class="nav-item"><%= link_to 'ログアウト', logout_path, class: 'nav-link',method: :delete %></li>
        </ul>
      </div>
    </nav>
  </header>  

  

<% else %>
<!--ログインしていない場合-->

  <header class="mb-4">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <a class="navbar-brand" href="/">トップページ</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to 'ユーザ登録', signup_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログアウト', logout_path, class: 'nav-link',method: :delete %></li>
        </ul>
      </div>
    </nav>
  </header>  

<% end %>